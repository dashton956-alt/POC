# NetBox Orchestrator POC Environment Configuration
# Copy this file to .env and customize the values

# NetBox Configuration
NETBOX_URL=http://localhost:8000
NETBOX_TOKEN=your-netbox-api-token-here
NETBOX_SECRET_KEY=your-50-character-secret-key-here

# Database Configuration
DB_NAME=netbox
DB_USER=netbox
DB_PASSWORD=your-secure-db-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Orchestrator Configuration
ORCHESTRATOR_URL=http://localhost:8080
ORCHESTRATOR_DB_URL=postgresql://orchestrator:password@localhost:5432/orchestrator
ORCHESTRATOR_REDIS_URL=redis://localhost:6380

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Email Configuration (optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=true

# Backup Configuration (optional)
BACKUP_ENABLED=false
BACKUP_LOCATION=/path/to/backup/directory
BACKUP_RETENTION_DAYS=30
